{
    "name": "typescript-cli-app",
    "version": "0.0.1",
    "description": "Basic Setup for a CLI application in TypeScript",
    "main": "index.js",
    "scripts": {
        "build": "eslint . --ext .ts && tsc",
        "lint": "eslint . --ext .ts",
        "dev": "ts-node-dev --respawn ./src/index.ts",
        "start": "ts-node-dev ./src/index.ts",
        "run-dist": "test -f ./dist/index.js && node ./dist/index.js",
        "test": "jest"
    },
    "author": "Ehsan Mohammadi",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "eslint": "^8.43.0",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "dotenv": "^16.3.1"
    }
}
